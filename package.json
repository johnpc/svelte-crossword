{
	"name": "svelte-crossword-app",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"ios": "cap open ios",
		"seed": "vite-node amplify/data/helpers/seed.ts",
		"sandbox": "amplify sandbox --config-out-dir ./src",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@aws-amplify/backend": "^0.7.0",
		"@aws-amplify/backend-cli": "^0.9.2",
		"@capacitor/cli": "^5.6.0",
		"@capacitor/core": "^5.6.0",
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"amplify-adapter": "^0.0.11",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.3",
		"vite-node": "^1.1.0"
	},
	"type": "module",
	"dependencies": {
		"@capacitor/ios": "^5.6.0",
		"aws-amplify": "^6.0.9",
		"svelte-crossword": "^0.3.4"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --cache --fix"
		],
		"*.json": "prettier --write",
		"*.yml": "prettier --write",
		"*.md": "prettier --write"
	}
}
