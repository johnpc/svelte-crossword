{
	"name": "svelte-crossword-app",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"ios": "CAPACITOR_BUILD=1 npm run build && cap sync ios && cap open ios",
		"build-android": "CAPACITOR_BUILD=1 npm run build && cap sync android && cap open android",
		"android": "aws s3 cp s3://jpcbucket.com/smallcrosswords/smallcrosswords.keystore . && npm run build-android",
		"seed": "vite-node amplify/data/helpers/seed.ts",
		"sandbox": "ampx sandbox --outputs-out-dir ./src --profile personal --once",
		"prod-config": "ampx generate outputs --app-id d34i7evdsl4uqo --branch main --out-dir src --profile personal",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@aws-amplify/backend": "^1.20.0",
		"@aws-amplify/backend-cli": "^1.8.2",
		"@aws-amplify/plugin-types": "^1.1.0",
		"@capacitor/android": "^8.0.2",
		"@capacitor/assets": "^3.0.4",
		"@capacitor/cli": "^8.0.2",
		"@fontsource/fira-mono": "^5.2.7",
		"@neoconfetti/svelte": "^2.2.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/eslint": "9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.52.0",
		"amplify-adapter": "^1.2.3",
		"dotenv": "^17.2.3",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.6",
		"ts-node": "^10.9.2",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^7.3.1",
		"vite-node": "^5.3.0"
	},
	"type": "module",
	"dependencies": {
		"@aws-sdk/client-lambda": "^3.967.0",
		"@aws-sdk/client-s3": "^3.967.0",
		"@capacitor/core": "^8.0.0",
		"@capacitor/haptics": "^8.0.0",
		"@capacitor/ios": "^8.0.0",
		"@event-calendar/core": "^3.12.0",
		"@event-calendar/day-grid": "^3.12.0",
		"@zerodevx/svelte-toast": "^0.9.5",
		"aws-amplify": "^6.15.9",
		"svelte-loading-spinners": "^0.3.4",
		"svelte-persisted-store": "^0.12.0"
	},
	"lint-staged": {
		"package.json": [
			"node scripts/check-dependency-versions.cjs",
			"prettier --write"
		],
		"*.ts": [
			"prettier --write",
			"eslint --cache --fix"
		],
		"*.json": "prettier --write",
		"*.yml": "prettier --write",
		"*.md": "prettier --write"
	}
}
